# Supabase Configuration
# Получите эти значения в панели управления Supabase: https://supabase.com/dashboard
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Admin Configuration
# Пароль для доступа к админ-панели (измените на свой)
VITE_ADMIN_PASSWORD=winter-quest-2025

# Game Configuration
# Максимальное количество игроков одновременно
VITE_MAX_PLAYERS=200

# File Upload Limits (in MB)
VITE_MAX_IMAGE_SIZE=10
VITE_MAX_VIDEO_SIZE=10
VITE_MAX_AUDIO_SIZE=10

# Supported File Formats
VITE_IMAGE_FORMATS=jpg,jpeg,png,webp,gif,bmp
VITE_VIDEO_FORMATS=mp4,mov,avi,mkv,webm,3gp,m4v
VITE_AUDIO_FORMATS=mp3,wav,ogg,aac,m4a,flac

# Push Notifications (Firebase Cloud Messaging - опционально)
# Для использования push-уведомлений добавьте Firebase
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Analytics (опционально)
# Для отслеживания использования можно добавить Google Analytics
VITE_GA_TRACKING_ID=your_google_analytics_id_here

# Development Settings
# Установите в 'development' для отладочной информации
VITE_ENVIRONMENT=production